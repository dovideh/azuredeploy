pipeline {
    agent any
    
    triggers {
        pollSCM('H/5 * * * *') // Poll every five minutes as an example
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh 'echo clean'
            }
        }
        stage('Test') {
            steps {
                sh 'echo test'
            }
        }
        // Add more stages as needed
    }
    
    post {
        success {
            echo 'Build successful'
        }
        failure {
            echo 'Build failed'
        }
    }
}
