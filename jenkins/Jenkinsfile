pipeline {
    agent any
    
    triggers {
        githubPush(branch: 'main') // Trigger on main branch commit
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                // Add your build steps here
                sh 'echo clean' // Example Maven build step
            }
        }
        
        stage('Test') {
            steps {
                // Add your test steps here
                sh 'echo test' // Example Maven test step
            }
        }
        
        // Add more stages as needed
    }
    
    post {
        success {
            // Add actions to perform after a successful build
            echo 'Build successful'
        }
        failure {
            // Add actions to perform after a failed build
            echo 'Build failed'
        }
    }
}
